server {
    listen 80;
    server_name apiy2.susitio.cl;

    root /var/www/apiy2.susitio.cl/html;
    index index.html;

    # SPA: redirigir cualquier ruta al index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy de la API hacia el backend (ajusta el puerto/host)
    location /api/ {
        proxy_pass http://127.0.0.1:3000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    # Opcional: CORS para la API si necesitas exponer a otros or√≠genes
    # add_header Access-Control-Allow-Origin "https://apiy2.susitio.cl" always;
    # add_header Access-Control-Allow-Methods "GET, POST, OPTIONS" always;
    # add_header Access-Control-Allow-Headers "Content-Type, Authorization" always;
}

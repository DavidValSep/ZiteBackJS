# ========================================
#  Y2Back API - Nginx Configuration
# ========================================
#  Configuración para servidor Nginx
#  con proxy reverso a aplicación Node.js
# ========================================

server {
    listen 80;
    server_name tu-dominio.com;

    # Logs
    access_log /var/log/nginx/y2back-access.log;
    error_log /var/log/nginx/y2back-error.log;

    # Límite de tamaño de archivos (para descargas grandes)
    client_max_body_size 100M;

    # Proxy a la API Node.js
    location /api {
        proxy_pass http://127.0.0.1:7770;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeouts para descargas largas
        proxy_connect_timeout 600;
        proxy_send_timeout 600;
        proxy_read_timeout 600;
        send_timeout 600;
    }

    # Servir archivos estáticos (frontend)
    location / {
        root /var/www/y2back/web/dist;
        try_files $uri $uri/ /index.html;
        
        # Cache para assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # Servir archivos de medios descargados
    location /medios {
        alias /var/www/y2back/medios;
        autoindex off;
        
        # Permitir streaming de video/audio
        add_header Accept-Ranges bytes;
    }
}

